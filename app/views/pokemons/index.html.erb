<%= render 'shared/banner' %>

<div class="wrapper">
    <div class="container">

        <h1>Pokedex</h1>

        <form class="form-inline">
        <input type="text" class="form-control mb-2 mr-sm-2" id="search" placeholder="Search a pokemon...">
        </form>

        <div class="row" id="box"></div>

        <div class="row">
            <div class="col-md-6">
                <button type="button" class="btn-pagination" id="previous">Previous</button>
            </div>

            <div class="col-md-6">
                <button type="button" class="btn-pagination" id="next">Next</button> 
            </div>
        </div>

    </div>

    <%= render 'shared/footer' %>

</div>
